{
  "name": "Ansible Collection Development",
  "image": "mcr.microsoft.com/devcontainers/python:3.11",
  "features": {
    "ghcr.io/devcontainers/features/podman:1": {},
    "ghcr.io/devcontainers/features/git:1": {}
  },
  "postCreateCommand": "pip install --upgrade pip && pip install ansible-core ansible-lint yamllint molecule molecule-plugins[podman] pre-commit",
  "customizations": {
    "vscode": {
      "extensions": [
        "redhat.ansible",
        "ms-python.python",
        "redhat.vscode-yaml"
      ],
      "settings": {
        "ansible.useFullyQualifiedCollectionNames": true,
        "files.associations": {
          "*.yml": "ansible",
          "*.yaml": "ansible"
        },
        "editor.tabSize": 2,
        "editor.insertSpaces": true
      }
    }
  },
  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}"
}
